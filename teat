-- Keybind 'F' mit Sequenz (NICHT ZU SCHNELL)
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = game:GetService("Players").LocalPlayer

local COOLDOWN = 1.5 -- 1.5 Sekunden Cooldown
local lastActivation = 0
local isActivating = false

-- Diese Funktion aktiviert ein Tool, rÃ¼stet es aus und WARTET
local function useAndFinishTool(toolName, waitTime)
	local tool = LocalPlayer.Backpack:FindFirstChild(toolName) or 
	             (LocalPlayer.Character and LocalPlayer.Character:FindFirstChild(toolName))
	
	if not tool then
		warn("âŒ Tool nicht gefunden:", toolName)
		return
	end
	
	-- AusrÃ¼sten
	local humanoid = LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
	if humanoid then
		humanoid:EquipTool(tool)
		task.wait(0.1) -- Warten bis ausgerÃ¼stet
	end
	
	-- Aktivieren
	tool:Activate()
	print("âœ… Tool aktiviert:", toolName)
	
	-- Warten, bevor das nÃ¤chste Tool dran ist
	task.wait(waitTime)
end

-- Keybind-Funktion
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
	if gameProcessedEvent then return end
	
	-- âœ… HIER GEÃ„NDERT: von 'T' zu 'F'
	if input.KeyCode == Enum.KeyCode.F then
		
		local now = tick()
		if now - lastActivation < COOLDOWN or isActivating then
			return
		end
		
		lastActivation = now
		isActivating = true
		
		print("ğŸ”¥ Keybind 'F' gedrÃ¼ckt - starte Sequenz...")
		
		-- Starte die Sequenz
		task.spawn(function()
			useAndFinishTool("BeeHive", 0.4)
			useAndFinishTool("All Seeing Sentry", 0.4)
			useAndFinishTool("Subspace Mine", 0.2)
			
			-- Unequip am Ende
			local humanoid = LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
			if humanoid then
				humanoid:UnequipTools()
			end
			
			print("âœ… Sequenz beendet!")
			isActivating = false
		end)
	end
end)

print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
print("âœ… Keybind 'F' Sequenz geladen!")
print("ğŸ BeeHive -> ğŸ‘ï¸ Sentry -> ğŸ’£ Mine")
print("â±ï¸  Mit Pausen dazwischen.")
print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
